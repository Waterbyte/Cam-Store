<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="actionModeBackground">@color/colorPrimary</item>
        <item name="android:actionModeCloseButtonStyle">@style/mybackbutton</item>
        <item name="android:actionOverflowButtonStyle">@style/OverflowActionBar</item>
    </style>


    <style name="mybackbutton" parent="Widget.AppCompat.Light.ActionButton.CloseMode">
        <item name="android:color">@color/colorWhite</item> <!-- whatever color -->
    </style>
    <style name="OverflowActionBar" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:color">@color/colorWhite</item>
    </style>

    <style name="MenuLabelsStyle">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="MenuButtonsStyle">
        <item name="fab_size">mini</item>
        <item name="fab_colorNormal">@color/colorPrimary</item>
        <item name="fab_colorPressed">@color/colorPrimaryDark</item>
        <item name="fab_colorRipple">#62B2FF</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

</resources>
